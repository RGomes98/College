@model Academico.Models.Aluno

@{
    ViewData["Title"] = "Remover Aluno";
}



<div>
    <h2>Deletar Aluno</h2>
    <h4>Tem certeza de que deseja excluir este aluno?</h4>
    <hr/>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegistroAcademico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegistroAcademico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeCompleto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailInstitucional)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailInstitucional)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TelefoneContato)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TelefoneContato)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnderecoResidencial)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnderecoResidencial)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>
        <hr />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>